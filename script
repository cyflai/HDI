sudo fscreate -i 50 -c on -t advanced -y -s 1 fs_chris

sudo fsmount -w fs_chris

dircreate -u root -g root /mnt/fs_chris/chris_share


sudo cifscreate -x chris_share -d /mnt/fs_chris/chris_share

sudo arcmigset --file-system fs_chris --task --name daily_migtask --schedule --date 2017/08/01 --time 23:30 --interval 1d --duration 2